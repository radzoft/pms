# Build the docker image with `npx nx docker-build data`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t data`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system data && \
          adduser --system -G data data

COPY dist/apps/data data
RUN chown -R data:data .

CMD [ "node", "data" ]
